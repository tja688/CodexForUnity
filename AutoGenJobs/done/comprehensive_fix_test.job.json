            "out": {
                "go": "$canvasObj"
            }
        },
        {
            "cmd": "AddComponent",
            "args": {
                "target": {
                    "ref": "$canvasObj"
                },
                "type": "UnityEngine.Canvas",
                "ifMissing": true
            },
            "out": {
                "component": "$canvas"
            }
        },
        {
            "cmd": "SetSerializedProperty",
            "args": {
                "target": {
                    "ref": "$canvas"
                },
                "propertyPath": "m_RenderMode",
                "value": 1
            }
        },
        {
            "cmd": "SetSerializedProperty",
            "args": {
                "target": {
                    "ref": "$canvas"
                },
                "propertyPath": "m_RenderMode",
                "value": {
                    "enum": "UnityEngine.RenderMode",
                    "name": "ScreenSpaceCamera"
                }
            }
        },
        {
            "cmd": "SetTransform",
            "args": {
                "target": {
                    "ref": "$testObj"
