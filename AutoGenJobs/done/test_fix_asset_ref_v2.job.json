{
    "schemaVersion": 1,
    "jobId": "test_fix_asset_ref_v2_20260107",
    "projectWriteRoot": "Assets/AutoGen",
    "dryRun": false,
    "meta": {
        "author": "AutoTest",
        "note": "验证 AssetRef 修复 v2：测试 Package 路径的 Sprite 资产加载（智能类型检测）"
    },
    "commands": [
        {
            "cmd": "CreateGameObject",
            "args": {
                "name": "AssetRefTestV2_Object",
                "ensure": true,
                "ensureTag": "asset_ref_test_v2"
            },
            "out": {
                "go": "$testObj"
            }
        },
        {
            "cmd": "AddComponent",
            "args": {
                "target": {
                    "ref": "$testObj"
                },
                "type": "UnityEngine.SpriteRenderer",
                "ifMissing": true
            },
            "out": {
                "component": "$sr"
            }
        },
        {
            "cmd": "SetSerializedProperty",
            "args": {
                "target": {
                    "ref": "$sr"
                },
                "propertyPath": "m_Sprite",
                "value": {
                    "assetPath": "Packages/com.unity.2d.sprite/Editor/ObjectMenuCreation/DefaultAssets/Textures/v2/Square.png"
                }
            }
        },
        {
            "cmd": "SetSerializedProperty",
            "args": {
                "target": {
                    "ref": "$sr"
                },
                "propertyPath": "m_Color",
                "value": [
                    0.2,
                    0.8,
                    0.4,
                    1.0
                ]
            }
        },
        {
            "cmd": "SaveAssets",
            "args": {
                "refresh": true
            }
        }
    ]
}