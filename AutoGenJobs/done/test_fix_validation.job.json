{
    "schemaVersion": 1,
    "jobId": "test_fix_validation_20260107",
    "projectWriteRoot": "Assets/AutoGen",
    "dryRun": false,
    "meta": {
        "author": "AutoTest",
        "note": "验证 SetSerializedProperty 修复：测试 Color 数组格式和 Enum 整数值设置"
    },
    "commands": [
        {
            "cmd": "CreateGameObject",
            "args": {
                "name": "FixTest_Object",
                "ensure": true,
                "ensureTag": "fix_test_obj"
            },
            "out": {
                "go": "$testObj"
            }
        },
        {
            "cmd": "AddComponent",
            "args": {
                "target": {
                    "ref": "$testObj"
                },
                "type": "UnityEngine.SpriteRenderer",
                "ifMissing": true
            },
            "out": {
                "component": "$sr"
            }
        },
        {
            "cmd": "SetSerializedProperty",
            "args": {
                "target": {
                    "ref": "$sr"
                },
                "propertyPath": "m_Color",
                "value": [
                    1.0,
                    0.5,
                    0.25,
                    1.0
                ]
            }
        },
        {
            "cmd": "CreateGameObject",
            "args": {
                "name": "FixTest_Canvas",
                "ensure": true,
                "ensureTag": "fix_test_canvas"
            },
            "out": {
                "go": "$canvasObj"
            }
        },
        {
            "cmd": "AddComponent",
            "args": {
                "target": {
                    "ref": "$canvasObj"
                },
                "type": "UnityEngine.Canvas",
                "ifMissing": true
            },
            "out": {
                "component": "$canvas"
            }
        },
        {
            "cmd": "SetSerializedProperty",
            "args": {
                "target": {
                    "ref": "$canvas"
                },
                "propertyPath": "m_RenderMode",
                "value": 0
            }
        },
        {
            "cmd": "SetSerializedProperty",
            "args": {
                "target": {
                    "ref": "$sr"
                },
                "propertyPath": "m_FlipX",
                "value": true
            }
        },
        {
            "cmd": "SaveAssets",
            "args": {
                "refresh": true
            }
        }
    ]
}