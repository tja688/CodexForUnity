{
    "schemaVersion": 1,
    "jobId": "test_fix_asset_ref_20260107",
    "projectWriteRoot": "Assets/AutoGen",
    "dryRun": false,
    "meta": {
        "author": "AutoTest",
        "note": "验证 AssetRef 功能：测试 Package 路径的 Sprite 资产加载"
    },
    "commands": [
        {
            "cmd": "CreateGameObject",
            "args": {
                "name": "AssetRefTest_Object",
                "ensure": true,
                "ensureTag": "asset_ref_test"
            },
            "out": {
                "go": "$testObj"
            }
        },
        {
            "cmd": "AddComponent",
            "args": {
                "target": {
                    "ref": "$testObj"
                },
                "type": "UnityEngine.SpriteRenderer",
                "ifMissing": true
            },
            "out": {
                "component": "$sr"
            }
        },
        {
            "cmd": "SetSerializedProperty",
            "args": {
                "target": {
                    "ref": "$sr"
                },
                "propertyPath": "m_Sprite",
                "value": {
                    "assetPath": "Packages/com.unity.2d.sprite/Editor/ObjectMenuCreation/DefaultAssets/Textures/v2/Square.png"
                }
            }
        },
        {
            "cmd": "SaveAssets",
            "args": {
                "refresh": true
            }
        }
    ]
}